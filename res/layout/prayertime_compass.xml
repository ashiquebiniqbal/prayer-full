<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android" >

    <include layout="@layout/common_toolbar"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff" >

        <TextView
            android:id="@+id/prayertime_compass_locationname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/prayertime_compass_heading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_below="@+id/prayertime_compass_locationname"
            android:textSize="10sp"/>

        <TextView
            android:id="@+id/prayertime_compass_center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_below="@+id/prayertime_compass_heading"
            android:text="^"/>

        <ImageView
            android:id="@+id/prayertime_compass_bg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/prayertime_compass_center"
            android:layout_centerHorizontal="true"
            android:src="@drawable/prayer_qibla_compass_bg" />

        <ImageView
            android:id="@+id/prayertime_compass_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/prayertime_compass_center"
            android:layout_centerHorizontal="true"
            android:src="@drawable/prayer_qibla_compass_arrow" />



    </RelativeLayout>
</LinearLayout>
