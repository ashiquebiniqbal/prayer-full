<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/evaluation_reminder_item_cv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:clickable="true"
        android:foreground="?android:selectableItemBackground"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_marginBottom="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical" >

            <TextView
                android:id="@+id/evaluation_reminder_item_lbl_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:textSize="10sp"
                android:text="@string/message_title"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingTop="20dp"/>

            <TextView
                android:id="@+id/evaluation_reminder_item_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/evaluation_reminder_item_lbl_message"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"/>

            <ImageView
                android:id="@+id/evaluation_reminder_item_ic_sound"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:padding="5dp"
                android:layout_toRightOf="@id/evaluation_reminder_item_lbl_message"/>

            <TextView
                android:id="@+id/evaluation_reminder_item_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:paddingTop="5dp"
                android:paddingRight="10dp"
                android:textSize="25sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/evaluation_reminder_item_lbl_repeat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:paddingTop="5dp"
                android:textSize="10sp"
                android:text="@string/repeat_title"
                android:layout_below="@id/evaluation_reminder_item_message"/>

            <LinearLayout
                android:id="@+id/evaluation_reminder_item_daygroupicon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@id/evaluation_reminder_item_lbl_repeat"
                android:gravity="center_horizontal">
                <ImageButton
                    android:id="@+id/evaluation_reminder_item_btn_sun"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:src="@drawable/prayer_day_icon_s_unchecked"
                    android:padding="5dp"/>
                <ImageButton
                    android:id="@+id/evaluation_reminder_item_btn_mon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:src="@drawable/prayer_day_icon_m_unchecked"
                    android:padding="5dp"/>
                <ImageButton
                    android:id="@+id/evaluation_reminder_item_btn_tue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:src="@drawable/prayer_day_icon_t_unchecked"
                    android:padding="5dp"/>
                <ImageButton
                    android:id="@+id/evaluation_reminder_item_btn_wed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:src="@drawable/prayer_day_icon_w_unchecked"
                    android:padding="5dp"/>
                <ImageButton
                    android:id="@+id/evaluation_reminder_item_btn_thu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:src="@drawable/prayer_day_icon_t_unchecked"
                    android:padding="5dp"/>
                <ImageButton
                    android:id="@+id/evaluation_reminder_item_btn_fri"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:src="@drawable/prayer_day_icon_f_unchecked"
                    android:padding="5dp"/>
                <ImageButton
                    android:id="@+id/evaluation_reminder_item_btn_sat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:src="@drawable/prayer_day_icon_s_unchecked"
                    android:padding="5dp"/>
            </LinearLayout>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <Space
        android:id="@+id/evaluation_reminder_item_spacebottom"
        android:layout_width="1dp"
        android:layout_height="50dp" />
</LinearLayout>